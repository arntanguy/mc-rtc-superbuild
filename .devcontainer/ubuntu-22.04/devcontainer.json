{
  "name": "mc-rtc-superbuild-jammy",
  "build": { 
    "dockerfile": "Dockerfile",
    "context": "../.."
  },

  "runArgs": ["--network=host"],

  "containerEnv": {
    "UBUNTU_VERSION": "jammy"
  },

  "features":
  {
    // "ghcr.io/duduribeiro/devcontainer-features/neovim:1": { "version": "nightly" }
  },

  // Configure tool-specific properties.
  "customizations": {
      "vscode": {
          "extensions": [
              "twxs.cmake",
              "ms-vscode.cmake-tools",
              "josetr.cmake-language-support-vscode",
              "ms-vscode.cpptools",
              "ms-vscode.docker",
              "ms-vscode.cpptools-extension-pack",
              "ms-vscode-remote.remote-containers"
          ]
      }
  },

  "remoteUser": "vscode",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace/mc-rtc-superbuild,type=bind",
  "workspaceFolder": "/home/vscode/workspace/mc-rtc-superbuild"
}
